<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.gamenew.JTAcativeActivity">

    <RelativeLayout
        android:id="@+id/wv_rl"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/toolbar2">

        <ImageView
            android:id="@+id/wv_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/left_blue" />

        <TextView
            android:id="@+id/wv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="活动详情"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tj_act_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="dasdasd" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动介绍"
            android:textColor="@color/colorBlue"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/act_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asdasdasdsa"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="参与方式"
            android:textColor="@color/colorBlue"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/act_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3123123123"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="任务奖励"
            android:textColor="@color/colorBlue"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/act_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3123123123"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            />


    </LinearLayout>


</LinearLayout>
